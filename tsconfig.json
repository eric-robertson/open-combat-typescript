{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node",
    "pretty": true,
    "target": "es2019",
    "outDir": "./build",
    "lib": ["ES2017"],
    "resolveJsonModule": true,
    "typeRoots" : ["./node_modules/@types"],
    "experimentalDecorators": true,
    "esModuleInterop": true,
  },
  "include": [
    "engine/**/*.*",
    "systems/**/*.*"
  ]
}