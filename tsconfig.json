{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "target": "es2019",
    "outDir": "./build",
    "lib": ["es6"],
    "resolveJsonModule": true,
    "typeRoots" : ["./node_modules/@types"],
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.*"
  ]
}